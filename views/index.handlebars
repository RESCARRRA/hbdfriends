
    <h1> <img src="./assets/img/burger.png" alt="burger icon" id="burg-img">EAT-D'Benedetto-BURGER<img src="./assets/img/burger.png" alt="burger icon" id="burg-img"> </h1>
<div class="box">
  
  <div class="burgerGenie"> 
  <h2> Happy Birthday Jen D'Benedetto </h2>
   <h2>BURGER GENIE</h2>
   <h4> Enter a BURGER you'd like to EAT! </h4>
    <form action="/api/burgers" method="POST" class="create-form">
    <div class="form-group">
      <input class="form-input" type="text" id="burg" name="burger_name"></input>
      <button id="add-burg" type="submit">Add Burger</button>
      </div>
    </form>
  </div>

  <div class="burgerList"> 
  <h2>BURGER LIST!</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgs/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
  </div>
  <div class="devourList">
  <h2>DEVOURED</h2>
    <ul>
      {{#each burgers}}
          {{#if devoured}}
           {{> burgs/burger-block devoured=false}}

        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>




